#1
name = input('Cheer: ')
for c in name:
  print("Give me a "+c+", "+c+"!")
print("What does it spell?")  
print(name.upper())

#2
n = int(input("Enter a number: "))
for i in range(1,n+1,+1):
  print(i)

#3
y = input("Line: ")[::-1]
